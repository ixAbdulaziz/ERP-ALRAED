{
  "name": "erp-alraed",
  "version": "3.0.0",
  "description": "نظام إدارة المشتريات - الرائد | نظام شامل لإدارة الموردين والفواتير والمدفوعات",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "test": "node server/app.js --test",
    "init-db": "node -e \"require('./server/database').initializeDatabase()\"",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.7.1",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.45.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "keywords": [
    "erp",
    "purchasing",
    "invoices",
    "suppliers",
    "payments",
    "management",
    "business",
    "accounting",
    "finance",
    "arabic",
    "nodejs",
    "postgresql",
    "bootstrap"
  ],
  "author": {
    "name": "الرائد",
    "email": "info@erp-alraed.com",
    "url": "https://erp-alraed.com"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ixAbdulaziz/ERP-ALRAED"
  },
  "homepage": "https://erp-alraed.com",
  "bugs": {
    "url": "https://github.com/ixAbdulaziz/ERP-ALRAED/issues"
  },
  "config": {
    "port": 3000,
    "upload_limit": "5mb",
    "session_secret": "erp-alraed-secret-key"
  },
  "nodemonConfig": {
    "watch": [
      "server/"
    ],
    "ext": "js,json",
    "ignore": [
      "uploads/",
      "public/",
      "node_modules/"
    ],
    "delay": 1000
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn"
    }
  }
}
